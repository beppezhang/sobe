<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>金币购买</title>
</head>
<body>

<!-- top bar -->
#parse("layout/head_top.vm")
#parse("layout/customercenter/header.vm")
<!-- crumb -->
<div id="crumb">
	<div class="layout clearfix">
    	<a href="${domain}/index.htm">首页</a> &gt; <a href="${domain}/mall/buyer/userCenter.htm">用户中心</a>
    </div>
</div>
<div class="layout mt10 clearfix">
#parse("layout/customercenter/leftmenu.vm")
    <div class="mainbody bg">
    	<div class="titbar_m mt10">
        	<strong>金币购买</strong>
        </div>
        
         <div class="pro_unit">
            <table cellspacing="0" cellpadding="0" class="table01">
                  <tr>
                    <!-- <th width="160">会员</th> -->
                    <th width="220">会员购买金额</th>
                    <th width="220">返利金币</th>
                    <th>获取时间</th>
                  </tr>
                  #foreach($!account in $!list)
                  <tr>
                    <!--<td>维罗尼卡</td> -->
                    <td><em class="bag col01">$!NumberTool.format("#0.00",$!account.payableAmount)</em></td>
                    <td><em class="coin col01">$!NumberTool.format("#0",$!account.amount)</em></td>
                    <td>$!date.format('yyyy-MM-dd HH:mm:ss',$!account.createTime)</td>
                  </tr>
                  #end
                  
             
            </table>
        </div>
    </div>	
</div>
<!-- footer -->
#parse("layout/footer.vm")
<script type="text/javascript">
jQuery(document).ready(function(){
  jQuery("#user_integeal_list_cur").addClass("active cur").siblings(".level0").removeClass("cur");
});
</script>
</body>
</html>

<script type="text/javascript">
	jQuery(function() {
		jQuery(".detailed_bottom_div .tabs span").bind(
				"click",
				function() {
					jQuery(this).addClass("hover").siblings().removeClass(
							"hover");
					jQuery(".detailed_bottom_div .tab_child").hide();
					jQuery(".detailed_bottom_div .tab_child").eq(
							jQuery(this).index()).show();
				})
		jQuery("#close").bind("click", function() {
			jQuery(".detailed_bottom_div .tab_box").toggle();
			jQuery(this).toggleClass("up");
			tableBodyHeight()
		})
		//jQuery(".tableListBD").rollbar();

		function tableBodyHeight() {
			if (jQuery("#close").hasClass("up")) {
				jQuery("#tableBody").height(jQuery("body").height() - 310)
			} else {
				jQuery("#tableBody").height(jQuery("body").height() - 515)
			}
		}
		tableBodyHeight()
		//jQuery("#tableBody").rollbar();
		jQuery(window).resize(function() {
			tableBodyHeight()
		});

		var invoiceType = "$!salesOrder.invoiceType";
		if (invoiceType == 0) {
			$("#invoicetitle").hide();
			$("#invoiceTitle").val("");
		} else {
			$("#invoicetitle").show();
		}
	})
</script>

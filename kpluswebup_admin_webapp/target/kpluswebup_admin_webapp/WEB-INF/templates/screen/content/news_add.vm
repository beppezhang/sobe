<!DOCTYPE html>
<html lang="zh-cn">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>新增新闻</title>
<meta name="keywords" content="" />
<meta name="description" content="" />
<meta name="viewport" content="width=device-width" />
#parse("control/public_css_js.vm")
</head>
<style>
html {
	padding: 0;
	margin: 0;
	width: 100%;
	height: 100%;
	overflow: auto;
}

body {
	padding: 0;
	margin: 0;
	width: 100%;
	height: 100%;
	background: #efefef;
	min-width: 1020px;
}
</style>
<body>
	<!--header S-->
	#parse("layout/head.vm")
	<!--header E-->
	<div class="main clearfix">
		<div class="conTit">
			<span>内容管理》新闻管理》新增新闻</span>
		</div>
		<div class="clear"></div>
		<!--TAB S-->

		<div class="tabBar clearfix">
			<div class="contentLf tabList">
				<ul>
					<li><em class="icon arrowLfWeight"></em> <a
						href="javascript:;" class="hover">新增新闻</a></li>
				</ul>
			</div>

			<div class="contentRt">
				<div class="contRt">
					<form action="$!{domain}/admin/content/addNews.htm" method="post">
						<!--form  S------->
						<div class="systemBar">
							<dl class="formSet">
								<dd class="clearfix">
									<div class="formTt">标题：</div>
									<div class="formRow">
										<input type="text" name="name" class="cText cTextLen">
									</div>
								</dd>
								<dd class="clearfix">
									<div class="formTt">副标题：</div>
									<div class="formRow">
										<textarea rows="5" cols="80" name="subTitle"> </textarea>
									</div>
								</dd>
								<dd class="clearfix">
									<div class="formTt">分类：</div>
									<div class="formRow">
										<select name="categoryID" class="select">
											#foreach($!cmsCategory in $!cmsCategoryList)
											<option value="$!cmsCategory.mainID">$!cmsCategory.name</option>
											#end
										</select>
									</div>
								</dd>
								<!-- <dd class="clearfix">
									<div class="formTt">栏目：</div>
									<div class="formRow">
										<select><option value=""></option>
										</select>
									</div>
								</dd> -->
								<dd class="clearfix">
									<div class="formTt">作者：</div>
									<div class="formRow">
										<input type="text" name="author" class="cText cTextLen">
									</div>
								</dd>
								<dd class="clearfix">
									<div class="formTt">发布时间：</div>
									<div class="formRow">
										<input type="text"
											onclick="WdatePicker({startDate:'%y-%M-01 00:00:00',dateFmt:'yyyy-MM-dd HH:mm:ss',alwaysUseStartDate:true})"
											readonly="readonly" name="publishTime" class="cText cTextLen">
									</div>
								</dd>
								<dd class="clearfix">
									<div class="formTt">来源链接：</div>
									<div class="formRow">
										<input type="text" name="sourceUrl" class="cText cTextLen">
									</div>
								</dd>
								<dd class="clearfix">
									<div class="formTt">配图：</div>
									<div class="formRow">
										<input type="hidden" class="cText cTextLen" value=""
											name="picUrl" id="picURL"> <img id="uploadImage"
											src="">   <input type="file" id="myBlogImage"
											name="myfiles" onchange="ajaxFileUpload()" />
									</div>
								</dd>
								<dd class="clearfix">
									<div class="formTt">内容：</div>
									<div class="formRow">
										<textarea rows="5" cols="80" name="content" id="text_content"> </textarea>
									</div>
								</dd>
								<dd class="clearfix">
									<div class="formTt">关键字：</div>
									<div class="formRow">
										<input type="text" name="keyword" class="cText cTextLen">
									</div>
								</dd>
								<dd class="clearfix">
									<div class="formTt">排序：</div>
									<div class="formRow">
										<input type="text" class="cText cTextLen" name="sortOrder">
									</div>
								</dd>
								<dd class="clearfix">
									<div class="formTt">&nbsp;</div>
									<div style="margin-top: 15px;" class="formRow">
										#if($!menuUtil.isExistMenu("/admin/content/addNews.htm",$!menuAllList)
										) <input type="submit" class="save" value="提交"> <input
											type="reset" name="cencle" class="cencle" value="重置">
										#end
									</div>
								</dd>
							</dl>
						</div>
					</form>
					<!--form  E------->
				</div>
			</div>
		</div>
		<!--TAB e-->
	</div>
	#parse("layout/footer.vm")
</body>
</html>
